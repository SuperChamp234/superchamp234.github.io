---
layout: base.njk
---
<link rel="stylesheet" href="/css/blog.css">

<div class="blog-container">
  <div class="blog-content">
    <h1>{{ title }}</h1>    
    <div class="blog-posts">
      {% set posts = collections.all | reverse %}
      {% set postCount = 0 %}
      {% for post in posts %}
        {% if (post.inputPath.includes('/posts/') or post.data.layout == 'post') and post.data.draft != true %}          {% set postCount = postCount + 1 %}
          <div class="post-item">
            <a href="{{ post.url }}" class="post-title">{{ post.data.title }}</a>
            {% if post.date %}
              <span class="post-date">{% if post.data.formatDate %}{{ post.data.formatDate }}{% else %}{{ post.date | formatDate }}{% endif %}</span>
            {% endif %}
          </div>
        {% endif %}
      {% endfor %}
    </div>
  </div>
  
  <footer class="blog-footer">
    <p>Â© {{ site.copyright or "2025" }} {{ site.author or site.title }}</p>
  </footer>
</div>
