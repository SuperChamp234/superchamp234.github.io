---
layout: base.njk
---
<link rel="stylesheet" href="/css/post.css">

<div class="post-container">
  <div class="post-navigation">
    <a href="/blog" class="back-link">&larr; back</a>
  </div>

  <article>
    <header class="article-header">
      <h1>{{ title }}</h1>
      <p class="post-meta">
        <time datetime="{{ page.date }}">{{ page.date | formatDate }}</time>
      </p>
    </header>
    
    <div class="article-content">
      {{ content | safe }}
    </div>
  </article>

  <footer>
    <p>&copy; {{ site.copyright or "2025" }} {{ site.author or site.title }}</p>
  </footer>
</div>