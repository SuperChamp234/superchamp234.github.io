---
layout: base.njk
---
<link rel="stylesheet" href="/css/post.css">
<link rel="stylesheet" href="/css/prism.css">

<script type="application/ld+json">
{
  "@context": "https://schema.org",
  "@type": "BlogPosting",
  "headline": "{{ title }}",
  "datePublished": "{{ page.date | formatDate }}",
  "dateModified": "{{ page.date | formatDate }}",
  "author": {
    "@type": "Person",
    "name": "Zain Siddavatam"
  },
  "description": "{{ description }}"
  {% if image %}
  ,"image": "{{ image | url | absoluteUrl(site.url) }}"
  {% endif %}
}
</script>

<div class="post-container">
  <div class="post-navigation">
    <a href="/blog" class="back-link">&larr; back</a>
  </div>

  <article>
    <header class="article-header">
      <h1>{{ title }}</h1>
      <p class="post-meta">
        <time datetime="{{ page.date }}">{{ page.date | formatDate }}</time>
      </p>
    </header>
    
    <div class="article-content">
      {{ content | safe }}
    </div>
  </article>

  <!-- Giscus comments section -->
  <script src="https://giscus.app/client.js"
          data-repo="SuperChamp234/superchamp234.github.io"
          data-repo-id="R_kgDON8UxeQ"
          data-category="Announcements"
          data-category-id="DIC_kwDON8Uxec4CrxIJ"
          data-mapping="title"
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="top"
          data-theme="light"
          data-lang="en"
          data-loading="lazy"
          crossorigin="anonymous"
          async>
  </script>
  <div class="giscus"></div>
</div>